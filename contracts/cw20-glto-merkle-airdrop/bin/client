#!/bin/bash

CMD=$1
NETWORK=$2
CONTRACT_ADDR=$(cat $3)
SENDER=
MINTER_ADDR=
CHAIN_ID=
FLAGS=

shift
shift
shift

case $NETWORK in
  testnet)
    echo "mint for $NETWORK not implemented" >&2
    exit -1
    ;;
  mainnet)
    echo "mint for $NETWORK not implemented" >&2
    exit -1
    ;;
  devnet)
    NODE="http://localhost:26657"
    SENDER=juno16g2rahf5846rxzp3fwlswy08fz8ccuwk03k57y
    MINTER_ADDR=juno16g2rahf5846rxzp3fwlswy08fz8ccuwk03k57y
    CHAIN_ID=testing
    ;;
esac


mint() {
  recipient=$1
  amount=$2
  msg='{"mint":{"recipient":"'$recipient'","amount":"'$amount'"}}'
  flags="\
    --node $NODE \
    --gas-prices 0.003ujunox \
    --chain-id $CHAIN_ID \
    --from $SENDER \
    --gas auto \
    --gas-adjustment 1.3 \
    --broadcast-mode block \
    --output json \
    -y \
    "
  echo junod tx wasm execute $CONTRACT_ADDR "$msg" $flags
  response=$(junod tx wasm execute "$CONTRACT_ADDR" "$msg" $flags)
  echo $response | ./bin/utils/base64-decode-attributes | jq
}


balance() {
  address=$1
  query='{"balance":{"address":"'$address'"}}'
  flags="--chain-id $CHAIN_ID --output json"
  echo junod query wasm contract-state smart $CONTRACT_ADDR "$query" $flags
  response=$(junod query wasm contract-state smart $CONTRACT_ADDR "$query" $flags)
  echo $response | ./bin/utils/base64-decode-attributes | jq
}

info() {
  query='{"token_info":{}}'
  flags="--chain-id $CHAIN_ID --output json"
  echo junod query wasm contract-state smart $CONTRACT_ADDR "$query" $flags
  response=$(junod query wasm contract-state smart $CONTRACT_ADDR "$query" $flags)
  echo $response | ./bin/utils/base64-decode-attributes | jq
}

minter() {
  query='{"minter":{}}'
  flags="--chain-id $CHAIN_ID --output json"
  echo junod query wasm contract-state smart $CONTRACT_ADDR "$query" $flags
  response=$(junod query wasm contract-state smart $CONTRACT_ADDR "$query" $flags)
  echo $response | ./bin/utils/base64-decode-attributes | jq
}


case $CMD in
  mint)
    mint $1 $2
    ;;
  balance) 
    balance $1
    ;;
  info) 
    info $1
    ;;
  minter) 
    minter $1
    ;;
esac